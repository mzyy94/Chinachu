{
  "recordedDir" : "./recorded/",
  "recordedPath": "<type>/[<date:yymmdd-HHMM>][<type><channel>][<tuner>]<title>.m2ts",
  
  "server": {
    "main": {
      "isEnabled": true,
      "port": 10772,
      "host": "::",

      "users": [
        {
          "name"    : "akari",
          "password": "bakuhatsu"
        },
        {
          "name"    : "kyoko",
          "password": "shuyaku",
          "group"   : "guest"
        }
      ],

      "groups": [
        {
          "name": "guest",
          "rules": [
            {
              "regexp" : "^config",
              "methods": ["*"],
              "isDeny" : true
            },
            {
              "regexp" : ".*",
              "methods": ["GET"]
            }
          ]
        }
      ],

      "tls": {
        "keyPath": "",
        "keyData": "",
        "certPath": "",
        "certData": "",
        "caPath": "",
        "caData": "",
        "requestCert": true,
        "rejectUnauthorized": true
      }
    },
    "open": {
      "isEnabled": false,
      "port": 20772
    }
  },

  "operator": {
    "tunerControl": {
      "failoverIsEnabled": true,
      "failoverThreshold": 5000
    },

    "recordControl": {
      "offsetStart": -3000,
      "offsetEnd"  : -5000
    }
  },

  "scheduler": {
    "workerProcesses": 4
  },
  
  "plugins": [
    "dlna",
    "tweet"
  ],
  
  "tunerGroup": {
    "pt3-01": {
      "controlWait": 500
    },
    "legacy-01": {
      "controlWait": 5000
    }
  },
  
  "tuners": [
    {
      "name"        : "PT3-S1",
      "isScrambling": false,
      "types"       : ["BS", "CS"],
      "command"     : "recpt1 --device /dev/pt3video0 --b25 <channel> - -",
      "group"       : "pt3-01"
    },
    {
      "name"        : "PT3-S2",
      "isScrambling": false,
      "types"       : ["BS", "CS"],
      "command"     : "recpt1 --device /dev/pt3video1 --b25 <channel> - -",
      "group"       : "pt3-01"
    },
    {
      "name"        : "PT3-T1",
      "isScrambling": false,
      "types"       : ["GR"],
      "command"     : "recpt1 --device /dev/pt3video2 --b25 <channel> - -",
      "group"       : "pt3-01"
    },
    {
      "name"        : "PT3-T2",
      "isScrambling": false,
      "types"       : ["GR"],
      "command"     : "recpt1 --device /dev/pt3video3 --b25 <channel> - -",
      "group"       : "pt3-01"
    },
    {
      "name"        : "FSUSB2",
      "isScrambling": false,
      "types"       : ["GR"],
      "command"     : "recfsusb2n -b <channel> - -",
      "group"       : "legacy-01"
    }
  ],
  
  "channels": [
    { "type": "GR", "channel": "16" },
    { "type": "GR", "channel": "21" },
    { "type": "GR", "channel": "22" },
    { "type": "GR", "channel": "23" },
    { "type": "GR", "channel": "24" },
    { "type": "GR", "channel": "25" },
    { "type": "GR", "channel": "26" },
    { "type": "GR", "channel": "27" },
    
    { "type": "BS", "channel": "101" },
    { "type": "BS", "channel": "102" },
    { "type": "BS", "channel": "103" },
    { "type": "BS", "channel": "141" },
    { "type": "BS", "channel": "151" },
    { "type": "BS", "channel": "161" },
    { "type": "BS", "channel": "171" },
    { "type": "BS", "channel": "181" },
    { "type": "BS", "channel": "191" },
    { "type": "BS", "channel": "192" },
    { "type": "BS", "channel": "193" },
    { "type": "BS", "channel": "200" },
    { "type": "BS", "channel": "211" },
    { "type": "BS", "channel": "222" },
    
    { "type": "CS", "channel": "CS4",  "sid": "100" },
    { "type": "CS", "channel": "CS16", "sid": "333" }
  ]
}
